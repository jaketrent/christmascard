body
  padding: $base-line-height $col-edge-padding
  font-family: $sans-font-family
  color: #fff
  background: linear-gradient(bottom left, #59c6f2 0%, #d3eef6 20%, #dfebb5 40%, #a3d8c1 100%)

.video
  max-width: 1280px
  margin: 0 auto

.title
  display: block
  margin: 20px auto
  max-width: 100%

.message
  max-width: 100%
  width: 960px
  margin: 0 auto
  font-size: 16px
  line-height: 20px

  p
    margin-bottom: 20px


@media screen and (min-width: 760px)

  .title
    margin-bottom: 50px

  .message
    font-size: 20px
    line-height: 26px

    p
      margin-bottom: 25px

  .cite
    text-align: right
    font-size: 24px

